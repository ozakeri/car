<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReportFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <gap.com.car.widget.CircularProgress
            android:id="@+id/progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:text="بازه زمانی درخواست "
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layoutLeaveType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/selected_leave_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/selected_timeOfDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:text="بیش از یک روز"
                    android:theme="@style/MyRadioButtonReport" />

                <RadioButton
                    android:id="@+id/selected_timeOfDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:text="یک روز"
                    android:theme="@style/MyRadioButtonReport" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutLeaveType"
            android:layout_margin="5dp"
            android:gravity="right">


            <ImageView
                android:id="@+id/imgEndDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/calendar_menu_icon"
                android:gravity="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editTextEndDate"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textview_report_style"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="تا"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgStartDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/calendar_menu_icon"
                android:gravity="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textview_report_style"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="از"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout_editText"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:text="نوع "
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layoutRequestType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout_editText"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@+id/selected_requestTypeEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/requestTypeEN3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:text="استعلاجی"
                    android:theme="@style/MyRadioButtonReport" />

                <RadioButton
                    android:id="@+id/requestTypeEN2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:text="بدون حقوق"
                    android:theme="@style/MyRadioButtonReport" />

                <RadioButton
                    android:id="@+id/requestTypeEN1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:text="استحقاقی"
                    android:theme="@style/MyRadioButtonReport" />

            </RadioGroup>

        </LinearLayout>


        <gap.com.car.widget.CustomEditText
            android:id="@+id/desc1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layoutRequestType"
            android:layout_margin="10dp"
            android:background="@drawable/textview_report_style"
            android:gravity="right"
            android:hint="توضیحات"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:background="@drawable/button_corner"
            android:text="ثبت"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

</FrameLayout>